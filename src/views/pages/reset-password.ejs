<%- include('../partials/head', { title: 'Redefinir Senha' }) %>

<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
  <div class="border p-4 py-5 rounded shadow-lg caixa-externa">
    <h1 class="text-center display-6 fw-bold mb-4 text-success">Nova Senha</h1>
    <hr>
    
    <% if (erro) { %>
      <div class="alert alert-danger"><%= erro %></div>
    <% } %>

    <form action="/reset-password/<%= token %>" method="POST">
      <div class="form-group mb-4">
        <label for="senha" class="form-label">Nova Senha</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <input 
            type="password" 
            class="form-control input-custom" 
            id="senha" 
            name="senha" 
            required
            minlength="6"
          >
        </div>
        <small class="form-text text-muted">MÃ­nimo 6 caracteres</small>
      </div>

      <button type="submit" class="btn btn-success w-100">Redefinir Senha</button>
    </form>
  </div>
</div>