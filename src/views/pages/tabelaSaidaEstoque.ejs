<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tabela Com Estoque Atual</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .table-container {
      max-height: 78vh;
      overflow-y: auto;
      overflow-x: hidden;
    }
    .table-container table {
      width: 100%;
    }
    .table-container th,
    .table-container td {
      word-wrap: break-word;
      white-space: nowrap;
    }
    .table-container thead th {
      position: sticky;
      top: 0;
      background-color: #fff;
      z-index: 1;
    }
    .btn-action{
      width: 70px;
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

    <div class="caixa container p-4">
      <!-- breadcrumb -->
      <div class="pb-3 mt-3">
        <%- include('../partials/breadcrumb', { pageTitle: 'Itens Pagos' }) %>
      </div>

      <div class=" border bg-light p-4 shadow-sm rounded">
        <div class="row align-items-center mb-3">
          <h2 class="text-center text-success mb-3 mt-3 fw-bold">Itens que saíram do estoque</h2>
        </div>
        <div class="table-container">
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th class="text-center">ID</th>
              <th>Descrição</th>
              <th class="text-center">Data da Saída</th>
              <th class="text-center">Destino</th>
              <th class="text-center">Referência</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% if (itensPagos.length > 0) { %>
              <% itensPagos.forEach(function(item) { %>
                <tr>
                  <td class="py-1 text-center"><%= item.id %></td>
                  <td class="py-1"><%= item.descricao %></td>
                  <td class="py-1 text-center"><%= new Date(item.data_de_saida).toLocaleDateString('pt-BR') %></td>
                  <td class="py-1 text-center"><%= item.destino %></td>
                  <td class="py-1 text-center"><%= item.referencia %></td>
                  <td class="py-1 text-center">
                    <button type="button" class="btn btn-secondary btn-sm btn-action" data-id="<%= item.id %>">Visualizar</button>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="11" class="text-center">Ainda não há itens Pagos</td>
              </tr>
            <% } %>
          </tbody>
        </table>
        </div>
      </div>
  </div>
</body>
</html>
