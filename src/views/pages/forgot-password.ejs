<!DOCTYPE html>
<html lang="pt-br">
<%- include('../partials/head', { title: 'Recuperar Senha' }) %>
   <style>
      .input-custom:focus {
         outline: 0;
         box-shadow: none !important;
      }
      .text-secondary:hover {
         color: #2e7d32 !important;
         text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
      }
      .caixa-externa {
         width: 350px;
         max-width: 100%;
      }
   </style>
   <body>
      <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
         <div class="border p-4 py-5 rounded shadow-lg caixa-externa">
               <h1 class="text-center display-6 fw-bold mb-4 text-success">Recuperar Senha</h1>
               <hr>
               <% if (erro) { %>
                  <div class="alert alert-danger">
                     <%= erro %>
                  </div>
               <% } %>
               <% if (success) { %>
                  <div class="alert alert-success">
                     <%= success %>
                  </div>
               <% } %>
               <form action="/forgot-password" method="POST">
                  <div class="form-group mb-4">
                     <label for="email" class="form-label">E-mail cadastrado</label>
                     <div class="input-group">
                           <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                           <input 
                              type="email" 
                              class="form-control input-custom" 
                              id="email" 
                              name="email" 
                              placeholder="exemplo@dominio.com" 
                              required
                           >
                     </div>
                  </div>
                  <div class="d-flex justify-content-center">
                     <button type="submit" class="btn btn-success w-100">Enviar Instruções</button>
                  </div>
               </form>
               <div class="text-center mt-4">
                  <a href="/login" class="text-decoration-none text-secondary">Lembrou sua senha? Faça login</a>
               </div>
         </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
      <script>
         window.onload = function () {
            document.getElementById('email').focus();
         };
      </script>
   </body>
</html>