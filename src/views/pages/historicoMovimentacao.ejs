<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Histórico de Movimentação</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .table-container {
      max-height: 600px; /* Define a altura máxima da tabela */
      overflow-y: auto;  /* Adiciona um scroll vertical à tabela */
      overflow-x: hidden; /* Remove o scroll horizontal */
    }

    .table-container table {
      width: 100%;
      table-layout: fixed; /* Ajusta a tabela para evitar scroll horizontal */
    }

    .table-container th,
    .table-container td {
      word-wrap: break-word;
      white-space: nowrap;
    }

    .table-container thead th {
      position: sticky;
      top: 0;
      background-color: #fff;
      z-index: 1;
    }

    .table-container th.tipo {
      width: 6%; /* Ajusta a largura da coluna "Tipo" */
    }

    .table-container th.data {
      width: 10%; /* Ajusta a largura da coluna "Data" */
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/header') %>

  <div class="container-fluid">
    <div id="centralize-wrapper" class="centralize-wrapper">
      <div style="width: 75%;" id="container" class="container secondary-color mt-5 border shadow-sm">
        <main>
          <div class="table-container">
            <div class="row mt-3">
              <div class="mb-3">
                <h2 class="text-center text-success mb-3 fw-bold">Histórico de Movimentação</h2>
              </div>
            </div>
          </div>
          <div class="table-container">
            <div id="historico-movimentacao" class="mt-3"></div>
          </div>
        </main>
      </div>
    </div>
  </div>

  <script>
    async function carregarHistoricoMovimentacao() {
      const response = await fetch('/historico-movimentacao');
      const data = await response.json();
      const historicoDiv = document.getElementById('historico-movimentacao');
      historicoDiv.innerHTML = `
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th class="tipo text-center">Tipo</th>
              <th class="data text-center">Data</th>
              <th>Descrição</th>
            </tr>
          </thead>
          <tbody>
            ${data.map(item => `
              <tr>
                <td class="text-center">${item.tipo}</td>
                <td class="text-center">${new Date(item.data).toLocaleDateString('pt-BR')}</td>
                <td>${item.descricao}</td>
              </tr>`).join('')}
          </tbody>
        </table>
      `;
    }

    // Carregar o histórico ao carregar a página
    window.onload = () => {
      carregarHistoricoMovimentacao();
    };
  </script>
</body>
</html>
