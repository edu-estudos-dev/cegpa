<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Histórico de Movimentação</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/header') %>

  <div class="container-fluid">
    <main>
      <div class="table-container">
        <div class="row mt-3">
          <div class="mt-5 mb-3">
            <h2 class="text-center text-success mb-3 mt-4 fw-bold">Histórico de Movimentação</h2>
          </div>
        </div>
      </div>
      <div class="table-container">
        <button id="fetch-historico" class="btn btn-primary mb-3">Obter Histórico</button>
        <div id="historico-movimentacao" class="mt-3"></div>
      </div>
    </main>
  </div>

  <script>
    document.getElementById('fetch-historico').addEventListener('click', async () => {
      const response = await fetch('/historico-movimentacao');
      const data = await response.json();
      const historicoDiv = document.getElementById('historico-movimentacao');
      historicoDiv.innerHTML = `
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th>Tipo</th>
              <th>Data</th>
              <th>Descrição</th>
              <th>Quantidade</th>
            </tr>
          </thead>
          <tbody>
            ${data.map(item => `
              <tr>
                <td>${item.tipo}</td>
                <td>${new Date(item.data).toLocaleString()}</td>
                <td>${item.descricao}</td>
                <td>${item.quantidade}</td>
              </tr>`).join('')}
          </tbody>
        </table>
      `;
    });
  </script>
</body>
</html>
