<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tabela Com Estoque Atual</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .table-container {
            max-height: 78vh;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .table-container table {
            width: 100%;
        }

        .table-container th,
        .table-container td {
            word-wrap: break-word;
            /* Quebrar palavras longas para caber na célula */
            white-space: nowrap;
            /* Evita quebras de linha dentro das células */
        }

        .table-container thead th {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 1;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('../partials/header') %>
        <div class="container-fluid">
            <main>
                <div class="table-container">
                    <div class="row mt-3">
                        <div class="mt-5 mb-3">
                            <h2 class="text-center text-success mb-3 mt-5 fw-bold">Tabela com o Estoque Atual</h2>
                        </div>
                    </div>
                </div>
                <div class="table-container">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">Entrada</th>
                                <th>Descrição</th>
                                <th class="text-center">Tombo</th>
                                <th class="text-center">Categoria</th>
                                <th class="text-center">Conta Contábil</th>
                                <th class="text-center">Documento de Origem</th>
                                <th class="text-center">Estoque</th>
                                <th class="text-center">Valor</th>
                                <th class="text-center">Situação</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (estoque.length> 0) { %>
                                <% estoque.forEach(function(item) { %>
                                    <tr> <td class="py-1 text-center"> <%= item.id %> </td>
                                        <td class="py-1 text-center"> <%= new Date(item.data_de_entrada).toLocaleDateString('pt-BR') %> </td>
                                        <td class="py-1"> <%= item.descricao %> </td>
                                        <td class="py-1 text-center"> <%= item.tombo %> </td>
                                        <td class="py-1 text-center"> <%= item.categoria %> </td>
                                        <td class="py-1 text-center"> <%= item.conta_contabil %> </td>
                                        <td class="py-1 text-center"> <%= item.doc_origem %> </td>
                                        <td class="py-1 text-center"> <%= item.estoque %> </td>
                                        <td class="py-1 text-center">R$ <%= Number(item.valor).toFixed(2) %> </td>
                                        <td class="py-1 text-center"> <%= item.situacao %> </td>
                                        <td class="py-1 text-center">
                                            <a href="/estoque/edit/<%= item.id %>"
                                                class="btn btn-warning btn-sm">Editar</a>
                                            <button type="button" class="btn btn-danger btn-sm delete-btn"
                                                data-id="<%= item.id %>">Excluir</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr> <td colspan="11" class="text-center">Ainda não há itens cadastrados</td> </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
</body>

</html>