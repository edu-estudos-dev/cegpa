<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tabela Com Estoque Atual</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <!-- Navbar -->
    <%- include('../partials/header') %>
        <div class="container-fluid">
            <main>
                <div class="row">
                    <div class="mt-5 mb-3">
                        <h2 class="text-center text-success mt-4 mb-3 fw-bold">Tabela com o Estoque Atual</h2>
                    </div>
                </div>
                <div class="table-container">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr class="table-green">
                                <th>ID</th>
                                <th>Entrada</th>
                                <th>Descrição</th>
                                <th>Tombo</th>
                                <th>Categoria</th>
                                <th>Conta Contábil</th>
                                <th>Documento de Origem</th>
                                <th>Estoque</th>
                                <th>Valor</th>
                                <th>Situação</th>
                                <th>Ações</th> <!-- Nova coluna de Ações -->
                            </tr>
                        </thead>
                        <tbody>
                            <% if (estoque.length> 0) { %>
                                <% estoque.forEach(function(item) { %>
                                    <tr>
                                        <td class="py-1">
                                            <%= item.id %>
                                        </td>
                                        <td class="py-1">
                                            <%= new Date(item.data_de_entrada).toLocaleDateString('pt-BR') %>
                                        </td>
                                        <td class="py-1">
                                            <%= item.descricao %>
                                        </td>
                                        <td class="py-1">
                                            <%= item.tombo %>
                                        </td>
                                        <td class="py-1">
                                            <%= item.categoria %>
                                        </td>
                                        <td class="py-1">
                                            <%= item.conta_contabil %>
                                        </td>
                                        <td class="py-1">
                                            <%= item.doc_origem %>
                                        </td>
                                        <td class="py-1">
                                            <%= item.estoque %>
                                        </td>
                                        <td class="py-1">R$ <%= Number(item.valor).toFixed(2) %>
                                        </td>
                                        <td class="py-1">
                                            <%= item.situacao %>
                                        </td>
                                        <td class="py-1">
                                            <a href="/estoque/edit/<%= item.id %>"
                                                class="btn btn-warning btn-sm">Editar</a>
                                            <button type="button" class="btn btn-danger btn-sm delete-btn"
                                                data-id="<%= item.id %>">Excluir</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="11" class="text-center">Ainda não há itens cadastrados</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
</body>

</html>

