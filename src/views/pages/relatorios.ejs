<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Relatórios de Estoque</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="shortcut icon" href="https://www.sspds.ce.gov.br/wp-content/themes/ceara2017/favicon.ico"
    type="image/x-png" />
  <style>

    .w-90 {
      width: 90%;
    }
  </style>
</head>

<body>
  <%- include('../partials/header') %>

    <div class="caixa w-90 p-4 mx-auto">

      <div class="row d-flex justify-content-center mb-4">
        <div class="col-md-1 ">
          <a href="/relatorios" class="btn btn-outline-success w-100 btn-header fw-bold nav-link active py-2">Entradas e
            Saida</a>
        </div>
        <div class="col-md-1 ">
          <a href="/estoque/itenspagos" class="btn btn-outline-success w-100 btn-header fw-bold">Itens pagos</a>
        </div>
        <div class="col-md-1 ">
          <a href="/historico-movimentacao-page" class="btn btn-outline-success w-100 btn-header fw-bold">Histórico</a>
        </div>
      </div>

      <div class=" border caixa-externa p-4 shadow-sm rounded">
        <div class="table-container">
          <div class="row">
            <div class="mb-3 px-3">
              <h2 style="border-bottom: 4px solid orange;" class="text-center text-white py-2 mt-0 fw-bold bg-success">
                Relatório de Entradas e Saidas </h2>
            </div>
          </div>
        </div>
        <div class="table-container">
          <div class="row">
            <div class="col-md-6 mb-4 text-center">
              <h3>Entradas</h3>
              <hr>
              <div id="relatorio-entradas" class="mt-3"></div>
            </div>
            <div class="col-md-6 mb-4 text-center">
              <h3>Saídas</h3>
              <hr>
              <div id="relatorio-saidas" class="mt-3"></div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <script>
      async function carregarRelatorioEntradas() {
        const response = await fetch('/relatorio-entradas');
        const data = await response.json();
        const relatorioDiv = document.getElementById('relatorio-entradas');
        relatorioDiv.innerHTML = `
    <table class="table table-striped table-hover mb-0">
      <thead>
        <tr>
          <th>Mês/Ano</th>
          <th>Total de Entradas</th>
        </tr>
      </thead>
      <tbody>
        ${data.map(item => `
          <tr>
            <td>${item.mes_ano}</td>
            <td>${item.total_entradas}</td>
          </tr>`).join('')}
      </tbody>
    </table>
  `;
      }

      async function carregarRelatorioSaidas() {
        const response = await fetch('/relatorio-saidas');
        const data = await response.json();
        const relatorioDiv = document.getElementById('relatorio-saidas');
        relatorioDiv.innerHTML = `
    <table class="table table-striped table-hover mb-0">
      <thead>
        <tr>
          <th>Mês/Ano</th>
          <th>Total de Saídas</th>
        </tr>
      </thead>
      <tbody>
        ${data.map(item => `
          <tr>
            <td>${item.mes_ano}</td>
            <td>${item.total_saidas}</td>
          </tr>`).join('')}
      </tbody>
    </table>
  `;
      }

      // Carregar os relatórios ao carregar a página
      window.onload = () => {
        carregarRelatorioEntradas();
        carregarRelatorioSaidas();
      };

    </script>
</body>

</html>