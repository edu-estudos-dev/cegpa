<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Relatórios de Estoque</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/header') %>

  <div class="container-fluid">
    <main>
      <div class="table-container">
        <div class="row mt-3">
          <div class="mt-5 mb-3">
            <h2 class="text-center text-success mb-3 mt-4 fw-bold">Relatórios de Estoque</h2>
          </div>
        </div>
      </div>
      <div class="table-container">
        <div class="mb-4">
          <h2>Relatório de Entradas</h2>
          <button id="fetch-entradas" class="btn btn-primary">Obter Relatório de Entradas</button>
          <div id="relatorio-entradas" class="mt-3"></div>
        </div>
        <div class="mb-4">
          <h2>Relatório de Saídas</h2>
          <button id="fetch-saidas" class="btn btn-primary">Obter Relatório de Saídas</button>
          <div id="relatorio-saidas" class="mt-3"></div>
        </div>
      </div>
    </main>
  </div>

  <script>
    document.getElementById('fetch-entradas').addEventListener('click', async () => {
      const response = await fetch('/relatorio-entradas');
      const data = await response.json();
      const relatorioDiv = document.getElementById('relatorio-entradas');
      relatorioDiv.innerHTML = `
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th>Mês/Ano</th>
              <th>Total de Entradas</th>
            </tr>
          </thead>
          <tbody>
            ${data.map(item => `
              <tr>
                <td>${item.mes_ano}</td>
                <td>${item.total_entradas}</td>
              </tr>`).join('')}
          </tbody>
        </table>
      `;
    });

    document.getElementById('fetch-saidas').addEventListener('click', async () => {
      const response = await fetch('/relatorio-saidas');
      const data = await response.json();
      const relatorioDiv = document.getElementById('relatorio-saidas');
      relatorioDiv.innerHTML = `
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th>Mês/Ano</th>
              <th>Total de Saídas</th>
            </tr>
          </thead>
          <tbody>
            ${data.map(item => `
              <tr>
                <td>${item.mes_ano}</td>
                <td>${item.total_saidas}</td>
              </tr>`).join('')}
          </tbody>
        </table>
      `;
    });
  </script>
</body>
</html>
