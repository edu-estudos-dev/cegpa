<!DOCTYPE html>
<html lang="pt-BR">

<%- include('../partials/head', { title: 'Quantidade Disponível' }) %>

   <style>
      * {
         margin: 0;
         padding: 0;
      }

      body {
         padding-top: 2.5rem;
      }

      .botoes {
         margin-bottom: 1.9rem;
      }

      .table-container {
         max-height: 65vh;
         overflow-y: auto;
         overflow-x: hidden;
      }

      .table-container table {
         width: 100%;
      }

      .table-container th,
      .table-container td {
         word-wrap: break-word;
         white-space: nowrap;
         text-align: left;
      }

      .table-container thead th {
         position: sticky;
         top: 0;
         background-color: #fff;
         z-index: 1;
      }

      .w-90 {
         width: 90%;
      }
   </style>

   <body>
      <%- include('../partials/header') %>

         <div class="caixa w-90 p-4 mx-auto">
            <div class="border caixa-externa p-4 shadow-sm rounded">
               <div class="row align-items-center mb-3 px-3">
                  <h2 style="border-bottom: 4px solid orange;"
                     class="text-center text-white py-2 mt-0 fw-bold bg-success">Quantidade Disponível</h2>
               </div>
               <div class="table-container">
                  <table class="table table-striped table-hover mb-0">
                     <thead>
                        <tr>
                           <th>Descrição</th>
                           <th class="text-center">Quantidade</th>
                        </tr>
                     </thead>
                     <tbody>
                        <% if (estoque.length> 0) { %>
                           <% estoque.forEach(function (item) { %>
                              <tr>
                                 <td class="py-1 text-start">
                                    <%= item.descricao %>
                                 </td>
                                 <td class="py-1 text-center">
                                    <%= item.quantidade %>
                                 </td>
                              </tr>
                              <% }); %>
                           <% } else { %>
                              <tr>
                                 <td colspan="2" class="text-center">Ainda não há itens cadastrados</td>
                              </tr>
                           <% } %>
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
   </body>
</html>